{
  "version": "0.2.0",
  "configurations": [
    {
      "command": "./node_modules/.bin/astro dev",
      "name": "Development server",
      "request": "launch",
      "type": "node-terminal"
    },
    {
      "type": "node-terminal",
      "request": "launch",
      "name": "Run Enrich refresh on URL",
      "command": "npx",
      "args": [
        "tsx",
        "src/enrich.ts",
        "--refresh",
        "--url",
        "${input:url}"
      ],
      "runtimeExecutable": "npx",
      "runtimeArgs": [
        "tsx"
      ]
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch Chrome (Incognito) and Attach",
      "url": "http://localhost:4321",
      "webRoot": "${workspaceFolder}",
      "runtimeArgs": [
        "--incognito"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Update Website Summaries - Debug",
      "runtimeArgs": [
        "--loader",
        "ts-node/esm"
      ],
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/src/lib/updateWebsiteSummaries.ts",
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart",
      "sourceMaps": true,
      "env": {
        "NODE_ENV": "development"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Update Website Summaries",
      "runtimeArgs": [
        "--import",
        "tsx"
      ],
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/src/lib/updateWebsiteSummaries.ts",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "sourceMaps": true,
      "env": {
        "NODE_ENV": "development"
      }
    },
    {
      "type": "node-terminal",
      "request": "launch",
      "name": "Debug Vitest Tests",
      "command": "npx vitest run --inspect-brk --no-file-parallelism",
      "console": "integratedTerminal"
    },
    {
      "name": "Playwright: Headed Mode",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeArgs": [
        "--inspect-brk"
      ],
      "program": "${workspaceFolder}/node_modules/.bin/playwright",
      "args": [
        "test:e2e",
        "--headed"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node-terminal",
      "request": "launch",
      "name": "Run Update Summaries Script",
      "command": "npm run update-summaries",
      "console": "integratedTerminal"
    }
  ],
  "inputs": [
    {
      "id": "url",
      "type": "promptString",
      "description": "Enter the URL to process:",
      "default": "https://www.wired.com/story/quick-select-keyboard-shortcuts-no-mouse/"
    }
  ]
}